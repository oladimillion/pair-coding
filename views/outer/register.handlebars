 <div class="row">
       <div class="col-md-12" style="margin-top: 1%;">
           <div class="col-md-4">
           </div>
           <div class="col-md-4">
           </div>
            <div class="col-md-4 right-side-control">
                <br>
                <h2 class="" style="font-family: Tahoma; font: 25px bold; margin-bottom: 15px;">Register</h2>
                <hr>
                <form class="form-horizontal" role="form" method="" action="">                
                    <div class="col-md-12 form-group">
                        <label class="control-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username"  min-length="3" required autofocus>
                    </div>
                    
                    <div class="col-md-12 form-group">
                        <label class="control-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email" required min-length="4">
                    </div>
                                    
                    <div class="col-md-12 form-group">
                        <label class="control-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                    </div>
                                
                    <div class="col-md-12 form-group">
                        <label class="control-label">Confirm Password</label>
                        <input type="password" class="form-control" id="cpassword" name="cpassword" placeholder="Confirm Password" required>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="button" id="signup-button" class="btn btn-default btn-md">Sign Up</button>
                        </div>
                    </div>
                    <span id="reg-status"  class="col-md-12 center status" style="margin-top: 15px">{{message}}</span>
                </form>
        </div>
       </div>
 </div>
